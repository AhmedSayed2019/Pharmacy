<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/bg_blue_lite"
            android:orientation="vertical"
            android:padding="@dimen/large_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/normal_hight_text"
                android:layoutDirection="inherit"

                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/normal_hight_text"
                    android:text="total price  "
                    android:textStyle="bold"
                    android:gravity="center_vertical"/>


                <TextView
                    android:id="@+id/dialogCheckOrder_txvw_totle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/normal_hight_text"
                    android:text="545 EGP"
                    android:gravity="center_vertical"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/normal_hight_text"
                android:layoutDirection="inherit"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/dialogCheckOrder_but_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="order"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:background="@drawable/bg_blue_dark"
                    android:textColor="@color/white"/>


                <Button
                    android:id="@+id/dialogCheckOrder_but_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="@dimen/small_margin"
                    android:background="@drawable/bg_gray_dark"
                    android:textColor="@color/white"/>



            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>



    </LinearLayout>


</RelativeLayout>